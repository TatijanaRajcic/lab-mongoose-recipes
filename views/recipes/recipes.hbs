<div class="recipes-page"> 
  <h1 class="centered">All our awesome recipes!</h1>

  <div class="recipes-container">
    {{#each recipes}}
      <article class="recipe-container">
        <header class="recipe-header">
          <h2>{{title}} by {{creator.name}}</h2>
        </header>
        <img src="{{image}}" alt="image of recipe">
        <button class="btn-red"><a href="/recipes/{{_id}}">View details</a></button>
      </article>
    {{/each}}
  </div>
</div>

