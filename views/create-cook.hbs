<div class="create-container">
  <h1 class="centered">Add your favorite cook!</h1>

  <form action="/create-cook" method="POST" class="create-form">

    <div class="title-container">
      <label for="title">Name of your cook </label>
      <input type="text" name="name" required>
    </div>

    <div class="title-container">
      <label for="title">Small bio </label>
      <input type="text" name="bio">
    </div>

    <button type="submit">Add your favorite cook!</button>

  </form>
</div>

